<div class="container mx-auto p-5">
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="text-right mb-3">
          <%= link_to 'QRを発行', admin_order_units_path, class: 'btn btn-primary', data: {turbo_method: :post, turbo_confirm: 'QRを発行します'} %>
        </div>
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">id</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">code</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">image</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">発行日時</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">会計日時</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @order_units.each do |order_unit| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= order_unit.id %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= order_unit.code %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= order_unit.qrcode %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= l order_unit.created_at, format: :long %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= order_unit.order.present? ? l(order_unit.order&.paid_at, format: :long) : '' %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>